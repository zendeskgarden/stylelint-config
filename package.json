{
  "name": "@zendeskgarden/stylelint-config",
  "description": "Garden stylelint config",
  "license": "Apache-2.0",
  "author": "Zendesk Garden <garden@zendesk.com>",
  "homepage": "https://garden.zendesk.com/",
  "repository": "https://github.com/zendeskgarden/stylelint-config",
  "bugs": {
    "url": "https://github.com/zendeskgarden/stylelint-config/issues"
  },
  "version": "8.1.1",
  "main": "index.js",
  "files": [
    "plugins",
    "rules"
  ],
  "scripts": {
    "format": "prettier-package-json --write",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "echo 'a { all: unset; }' | stylelint --config index.js",
    "lint:js": "eslint index.js plugins/*.js rules/**/*.js",
    "tag": "[ `git rev-parse --abbrev-ref HEAD` = 'master' ] && standard-version --no-verify",
    "test": "yarn lint && yarn format && git diff --quiet"
  },
  "peerDependencies": {
    "stylelint": "^9.4.x",
    "stylelint-order": "^0.8.x"
  },
  "devDependencies": {
    "@zendeskgarden/eslint-config": "^6.0.0",
    "babel-eslint": "^8.2.6",
    "eslint": "^5.3.0",
    "eslint-plugin-notice": "^0.7.7",
    "husky": "^1.0.0-rc.13",
    "prettier-package-json": "^1.6.0",
    "standard-version": "^4.4.0",
    "stylelint": "^9.4.0",
    "stylelint-order": "^0.8.1"
  },
  "keywords": [
    "garden",
    "stylelint",
    "zendesk"
  ],
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format",
      "post-checkout": "if [[ $GIT_PARAMS == *1 ]]; then yarn --ignore-scripts --pure-lockfile; fi",
      "post-merge": "yarn --ignore-scripts --pure-lockfile"
    }
  }
}
